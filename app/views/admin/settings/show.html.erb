<div class="card my-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h1>Application Settings</h1>
    <%= link_to "Edit Settings", edit_admin_settings_path, class: "btn btn-primary" %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <tbody>
          <% SettingDashboard::SHOW_PAGE_ATTRIBUTES.each do |attribute_name| %>
            <tr>
              <th scope="row" class="w-25"><%= attribute_name.to_s.titleize %></th>
              <td>
                <%= page.resource.public_send(attribute_name) || content_tag(:span, "Not set", class: "text-muted") %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <div class="mt-3">
      <%= link_to "Edit Settings", edit_admin_settings_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<% if current_user %>
  <% if current_user.likes.where(likeable: likeable).exists? %>
    <%= button_to unlike_path(likeable), method: :delete, class: "flex items-center text-red-500 hover:text-red-600" do %>
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" width="20" height="20">
        <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
      </svg>
    <% end %>
  <% else %>
    <%= button_to like_path(likeable), method: :post, class: "flex items-center text-gray-500 hover:text-red-500" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
      </svg>
    <% end %>
  <% end %>
<% else %>
  <%= link_to new_user_session_path, class: "flex items-center text-gray-500 hover:text-red-500 text-decoration-none" do %>
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
    </svg>
  <% end %>
<% end %>
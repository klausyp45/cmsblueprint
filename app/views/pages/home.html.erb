<% if current_user %>
<div class="px-4 pt-5 my-5 text-center border-bottom">
  <h1 class="display-4 fw-bold">Centered screenshot</h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead mb-4">Quickly design and customize responsive mobile-first sites with Bootstrap, the world’s most popular front-end open source toolkit, featuring Sass variables and mixins, responsive grid system, extensive prebuilt components, and powerful JavaScript plugins.</p>
    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
      <button type="button" class="btn btn-warning btn-lg px-4 me-sm-3">Primary button</button>
      <button type="button" class="btn btn-secondary btn-lg px-4">Secondary</button>
    </div>
  </div>
  <div class="overflow-hidden" style="max-height: 30vh;">
    <div class="container px-5">
      <img src="https://getbootstrap.com/docs/5.0/examples/heroes/bootstrap-docs.png" class="img-fluid border rounded-3 shadow-lg mb-4" alt="Example image" width="700" height="500" loading="lazy">
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <h2 class="text-center mb-4">Featured Posts</h2>
    <div class="row">
      <% @featured_posts.each do |post| %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <% if post.feature_image.attached? %>
              <%= image_tag post.feature_image, class: "card-img-top", alt: post.title %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= link_to post.title, post_path(post), class: "text-decoration-none" %></h5>
              <p class="card-text"><%= truncate(post.body, length: 100) %></p>
              <p class="text-muted small">Posted by <%= post.user.email %> • <%= time_ago_in_words(post.created_at) %> ago</p>
            </div>
            <div class="card-footer text-muted">
              <span class="me-3">
                <i class="bi bi-chat me-1"></i>
                <%= post.comments.count %> comments
              </span>
              <span>
                <i class="bi bi-heart me-1"></i>
                <%= post.likes.count %> likes
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="bg-light p-5 rounded mb-4">
  <h1>Bottom Navbar example</h1>
  <p class="lead">This example is a quick exercise to illustrate how the bottom navbar works.</p>
  <a class="btn btn-lg btn-primary" href="/docs/5.0/components/navbar/" role="button">View navbar docs »</a>
</div>
<% else %>
<div class="row align-items-center g-lg-5 py-5">
  <div class="col-lg-7 text-center text-lg-start">
    <h1 class="display-4 fw-bold lh-1 mb-3">Welcome Back</h1>
    <p class="col-lg-10 fs-4">Sign in to your account using your email and password. If you forgot your password, you can reset it below.</p>
  </div>
  <div class="col-md-10 mx-auto col-lg-5">
    <div class="card shadow-sm">
      <div class="card-body p-4">
        <% resource = User.new %>
        <% resource_name = :user %>
        <% devise_mapping = Devise.mappings[:user] %>
        <%= render partial: 'devise/sessions/form', locals: { resource: resource, resource_name: resource_name, devise_mapping: devise_mapping } %>
      </div>
    </div>
  </div>
</div>
<% end %>
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Posts</h1>

  <div class="flex space-x-4 mb-6">
    <%= link_to "All Posts", posts_path, class: "btn" %>
    <%= link_to "Blog Posts", posts_path(type: "blog"), class: "btn" %>
    <%= link_to "Event Posts", posts_path(type: "event"), class: "btn" %>
    <%= link_to "News Posts", posts_path(type: "news"), class: "btn" %>
  </div>

  <% if current_user %>
    <div class="mb-6">
      <%= link_to "New Post", new_post_path, class: "btn-primary" %>
    </div>
  <% end %>

  <div class="space-y-6">
    <% if @posts.present? %>
      <% @posts.each do |post| %>
        <div class="post-card">
          <!-- Your existing post card content -->
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500">No posts found.</p>
        <% if current_user %>
          <%= link_to "Create your first post", new_post_path, class: "btn-primary mt-4" %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Optional: Add pagination links if using pagination %>
  <%# <%= paginate @posts %>
</div>
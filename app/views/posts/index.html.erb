<div class="space-y-6">
  <% if @posts.present? %>
    <% @posts.each do |post| %>
      <div class="post-card border rounded-lg p-6 shadow-sm mb-4">
        <h2 class="text-xl font-bold text-gray-800 mb-1">
          <%= post.title %>
        </h2>
        
        <div class="flex items-center text-sm text-gray-500 mb-2">
          <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded mr-2">
            <%= post.post_type.titleize %>
          </span>
          <span class="mr-2">•</span>
          <span class="text-gray-600">
            Posted by <%= post.user.email %>
          </span>
          <span class="mr-2">•</span>
          <span class="text-gray-500">
            <%= time_ago_in_words(post.created_at) %> ago
          </span>
        </div>
        
        <p class="text-gray-700 mb-4">
          <%= truncate(post.body, length: 100, separator: ' ') %>...
          <%= link_to "Read more", post, class: "text-blue-500 hover:underline ml-1" %>
        </p>
        
        <div class="flex items-center space-x-4 text-sm text-gray-500 border-t pt-3">
          <!-- Like Button -->
          <div class="flex items-center space-x-1">
            <% if current_user %>
              <% if current_user.liked?(post) %>
                <%= button_to unlike_post_path(post), method: :delete, class: "text-red-500 hover:text-red-600 flex items-center" do %>
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                  </svg>
                  <span><%= post.likes.count %></span>
                <% end %>
              <% else %>
                <%= button_to like_post_path(post), method: :post, class: "text-gray-500 hover:text-red-500 flex items-center" do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                  </svg>
                  <span><%= post.likes.count %></span>
                <% end %>
              <% end %>
            <% else %>
              <%= link_to new_user_session_path, class: "flex items-center text-gray-500 hover:text-red-500" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                <span><%= post.likes.count %></span>
              <% end %>
            <% end %>
          </div>
          
          <!-- Comment Count -->
          <div class="flex items-center space-x-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <span><%= post.comments.count %> comments</span>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="text-center py-8">
      <p class="text-gray-500">No posts found.</p>
      <% if current_user %>
        <%= link_to "Create your first post", new_post_path, class: "btn-primary mt-4" %>
      <% end %>
    </div>
  <% end %>
</div>
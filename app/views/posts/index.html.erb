<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-5">
    <h1 class="display-6">Latest Posts</h1>
    <div class="flex space-x-4 mb-6">
      <%= link_to "All Posts", posts_path, class: "btn" %>
      <%= link_to "Blog Posts", posts_path(type: "blog"), class: "btn" %>
      <%= link_to "Event Posts", posts_path(type: "event"), class: "btn" %>
      <%= link_to "News Posts", posts_path(type: "news"), class: "btn" %>
    </div>
    <% if current_user %>
      <%= link_to new_post_path, class: "btn btn-primary" do %>
        <i class="bi bi-plus-circle me-2"></i>New Post
      <% end %>
    <% end %>
  </div>

  <div class="row">
    <% if @posts.present? %>
      <% @posts.each do |post| %>
        <div class="col-md-8 mx-auto mb-4">
          <div class="post-card card shadow-sm">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start">
                <div>
                  <span class="post-type <%= post.post_type %> badge rounded-pill mb-2">
                    <%= post.post_type.titleize %>
                  </span>
                  <h2 class="h4 card-title">
                    <%= link_to post.title, post, class: "text-decoration-none text-reset" %>
                  </h2>
                </div>
                <div class="flex-shrink-0">
                  
                </div>
              </div>

              <p class="card-text text-muted mt-3 mb-3">
                <%= truncate(post.body, length: 150) %>
              </p>

              <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                  <span class="me-3">
                    <i class="bi bi-clock me-1"></i>
                    <%= time_ago_in_words(post.created_at) %> ago
                  </span>
                  <span>
                    <i class="bi bi-chat me-1"></i>
                    <%= post.comments.count %> comments
                  </span>
                </div>

                <div class="d-flex align-items-center">
                  <% if current_user %>
                    <% if current_user.liked?(post) %>
                      <%= button_to unlike_post_path(post), method: :delete, class: "like-btn btn btn-sm btn-link text-danger me-2 text-decoration-none", title: "Unlike" do %>
                        <i class="bi bi-heart-fill me-1"></i>
                        <%= post.likes.count %>
                      <% end %>
                    <% else %>
                      <%= button_to like_post_path(post), method: :post, class: "like-btn btn btn-sm btn-link text-muted me-2 text-decoration-none", title: "Like" do %>
                        <i class="bi bi-heart me-1"></i>
                        <%= post.likes.count %>
                      <% end %>
                    <% end %>
                  <% else %>
                    <%= link_to new_user_session_path, class: "btn btn-sm btn-link text-muted me-2 text-decoration-none", title: "Sign in to like" do %>
                      <i class="bi bi-heart me-1"></i>
                      <%= post.likes.count %>
                    <% end %>
                  <% end %>

                  <%= link_to post, class: "btn btn-sm btn-outline-primary" do %>
                    Read more
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="col-md-6 mx-auto text-center py-5">
        <div class="card">
          <div class="card-body">
            <i class="bi bi-newspaper display-4 text-muted mb-4"></i>
            <h3 class="h4">No posts yet</h3>
            <p class="text-muted mb-4">Get started by creating your first post.</p>
            <% if current_user %>
              <%= link_to new_post_path, class: "btn btn-primary" do %>
                <i class="bi bi-plus-circle me-2"></i>New Post
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <%# Optional: Add pagination links if using pagination %>
    <%# <%= paginate @posts %>
  </div>
</div>
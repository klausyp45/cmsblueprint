<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Posts</h1>

  <div class="flex space-x-4 mb-6">
    <%= link_to "All Posts", posts_path, class: "px-4 py-2 bg-gray-200 rounded hover:bg-gray-300" %>
    <%= link_to "Blog Posts", posts_path(type: "blog"), class: "px-4 py-2 bg-gray-200 rounded hover:bg-gray-300" %>
    <%= link_to "Event Posts", posts_path(type: "event"), class: "px-4 py-2 bg-gray-200 rounded hover:bg-gray-300" %>
    <%= link_to "News Posts", posts_path(type: "news"), class: "px-4 py-2 bg-gray-200 rounded hover:bg-gray-300" %>
  </div>

  <% if current_user %>
    <div class="mb-6">
      <%= link_to "New Post", new_post_path, class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600" %>
    </div>
  <% end %>

  <div class="space-y-6">
    <% @posts.each do |post| %>
      <div class="border rounded-lg p-6 shadow-sm">
        <h2 class="text-xl font-semibold mb-2">
          <%= link_to post.title, post_path(post), class: "text-blue-600 hover:underline" %>
        </h2>
        
        <div class="text-sm text-gray-500 mb-2">
          <span class="capitalize"><%= post.post_type %></span> • 
          Posted by <%= post.user.email %> • 
          <%= time_ago_in_words(post.created_at) %> ago
        </div>
        
        <p class="text-gray-700 mb-4"><%= truncate(post.body, length: 250) %></p>
        
        <div class="flex items-center space-x-4 text-sm">
          <div class="flex items-center space-x-1">
            <%= render "likes/like_button", likeable: post %>
            <span><%= post.likes.count %></span>
          </div>
          
          <div class="flex items-center space-x-1">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <span><%= post.comments.count %> comments</span>
          </div>
          
          <% if current_user == post.user %>
            <div class="flex space-x-2">
              <%= link_to "Edit", edit_post_path(post), class: "text-blue-500 hover:underline" %>
              <%= button_to "Delete", post_path(post), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "text-red-500 hover:underline" %>
            </div>
          <% end %>
        </div>
        
        <div class="mt-4">
          <%= render "comments/form", commentable: post %>
        </div>
        
        <div class="mt-4 space-y-3">
          <%= render post.comments.order(created_at: :desc) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mb-4">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "form-control w-full px-3 py-2 border rounded-md shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :post_type, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.select :post_type, ["blog", "event", "news"], {}, class: "form-select w-full px-3 py-2 border rounded-md shadow-sm" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :body, rows: 10, class: "form-control w-full px-3 py-2 border rounded-md shadow-sm" %>
  </div>

  <div class="field">
    <%= form.label :feature_image %>
    <%= form.file_field :feature_image, class:"form-control mb-3" %>
  </div>

  <div class="field">
    <%= form.label :main_image %>
    <%= form.file_field :main_image, class:"form-control mb-3" %>
  </div>

  <div class="mb-4">
    <%= form.submit class: "btn btn-md btn-primary" %>
  </div>
<% end %>
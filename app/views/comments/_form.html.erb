<% if current_user %>
  <%= form_with(model: [commentable, Comment.new]) do |form| %>
    <div class="mb-4">
      <%= form.label :body, "Add a comment", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :body, rows: 3, class: "w-full px-3 py-2 border rounded-md shadow-sm", placeholder: "Write your comment here..." %>
    </div>
    
    <div class="mb-4">
      <%= form.submit "Post Comment", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 cursor-pointer" %>
    </div>
  <% end %>
<% else %>
  <p class="text-sm text-gray-500">Please <%= link_to "sign in", new_user_session_path, class: "text-blue-500 hover:underline" %> to comment.</p>
<% end %>
<% if current_user %>
  <%= form_with(model: [commentable, Comment.new], local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :body, "Add a comment", class: "form-label" %>
      <%= form.text_area :body, rows: 3, class: "form-control", placeholder: "Write your comment here..." %>
    </div>
    <div class="mb-3">
      <%= form.submit "Post Comment", class: "btn btn-primary" %>
    </div>
  <% end %>
<% else %>
  <div class="alert alert-info py-2 px-3">
    Please <%= link_to "sign in", new_user_session_path, class: "alert-link" %> to comment.
  </div>
<% end %>